@model List<News>
@if (Model != null)
{
    foreach (var item in Model)
    {
        <tr>

            <td>@item.PostId</td>
            <td>@item.Title</td>
            <td>@item.CreatedDate</td>
            <td>
                @if (item.Published == true)
                {
                    <div class="d-flex align-items-center">
                        <div class="badge badge-success badge-dot m-r-10"></div>
                        <div>Public</div>
                    </div>
                }
                else
                {
                    <div class="d-flex align-items-center">
                        <div class="badge badge-success badge-dot m-r-10"></div>
                        <div>Non-Public</div>
                    </div>
                }
            </td>
            <td>
                @if (item.IsHot == true)
                {
                    <div class="d-flex align-items-center">
                        <div class="badge badge-success badge-dot m-r-10"></div>
                        <div>Hot</div>
                    </div>
                }
                else
                {
                    <div class="d-flex align-items-center">
                        <div class="badge badge-success badge-dot m-r-10"></div>
                        <div>-</div>
                    </div>
                }
            </td>
            <td>
                @if (item.IsNewFeed == true)
                {
                    <div class="d-flex align-items-center">
                        <div class="badge badge-success badge-dot m-r-10"></div>
                        <div>NewFeed</div>
                    </div>
                }
                else
                {
                    <div class="d-flex align-items-center">
                        <div class="badge badge-success badge-dot m-r-10"></div>
                        <div>-</div>
                    </div>
                }
            </td>
            <td>
                <a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminNews" asp-action="Details" asp-route-id="@item.PostId">View</a>
                <a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminNews" asp-action="Edit" asp-route-id="@item.PostId">Edit</a>
                <a class="btn btn-success btn-tone m-r-5" asp-area="Admin" asp-controller="AdminNews" asp-action="Delete" asp-route-id="@item.PostId">Delete</a>
            </td>
        </tr>
    }

}

